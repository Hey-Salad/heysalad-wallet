# ===============================================
# HeySaladÂ® Wallet - Environment Configuration
# ===============================================
# SECURITY WARNING: Never commit your actual .env file!
# This is a template - copy to .env and fill in your values
# ===============================================

# RORK / Expo public URLs
# Use your Rork workspace base URL (shown in terminal as "Local/Cloud URL")
# Example: https://iywg9h8s91b0gotfa7jgk.rork.app
EXPO_PUBLIC_RORK_API_BASE_URL=

# ===============================================
# TRON Network Configuration
# ===============================================
# Choose one: Nile (testnet), Shasta (testnet), Mainnet
# For Nile testnet: https://nile.trongrid.io
# For Mainnet: https://api.trongrid.io
EXPO_PUBLIC_TRONGRID_URL=https://nile.trongrid.io

# Your TronGrid API key from https://www.trongrid.io/
# This is safe to expose in client (rotated regularly)
EXPO_PUBLIC_TRONGRID_API_KEY=your_trongrid_api_key_here

# ===============================================
# PRIVATE KEYS (NEVER COMMIT THESE!)
# ===============================================
# Backend signing key (server-only; DO NOT commit real keys)
# Used by backend to sign transactions securely
# Keep this ONLY in your local .env and secure environment variables
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TRON_PRIVATE_KEY=

# Your TRON wallet address (derived from private key above)
# Example: TFKkLTZKqHtgZKPH6efS9bsEVbB9qet3D6
TRON_OWNER_ADDRESS=

# ===============================================
# ElevenLabs AI Voice Configuration (Optional)
# ===============================================
# Get your API key from https://elevenlabs.io/
EXPO_PUBLIC_ELEVENLABS_API_KEY=

# Voice ID for Selina (British female voice)
# Find voice IDs in your ElevenLabs dashboard
EXPO_PUBLIC_ELEVENLABS_SELINA_VOICE_ID=

# Agent ID for conversational AI (if using agents)
EXPO_PUBLIC_ELEVENLABS_AGENT_ID=

# ===============================================
# Circle Programmable Wallets Configuration
# ===============================================
# Get your API keys from https://console.circle.com/
# Circle SDK enables passkey-based wallets with MPC security

# Circle API Key (server-side operations)
CIRCLE_API_KEY=your_circle_api_key_here

# Circle Client Key (client-side SDK initialization)
EXPO_PUBLIC_CIRCLE_CLIENT_KEY=your_circle_client_key_here

# Circle Client URL (SDK endpoint)
EXPO_PUBLIC_CIRCLE_CLIENT_URL=https://modular-sdk.circle.com/v1/rpc/w3s/buidl

# Circle Entity Secret (for developer-controlled wallets - optional)
# Not needed for passkey wallets
CIRCLE_ENTITY_SECRET=

# ===============================================
# Arc Network Configuration (Circle's L1 Blockchain)
# ===============================================
# Arc is Circle's Layer-1 blockchain where USDC is the native gas token
# No need for separate gas tokens!

# Arc Testnet RPC URL
EXPO_PUBLIC_ARC_TESTNET_RPC_URL=https://arc-testnet.rpc.caldera.xyz/http

# Arc Mainnet RPC URL
EXPO_PUBLIC_ARC_MAINNET_RPC_URL=https://arc.rpc.caldera.xyz/http

# Arc Testnet Chain ID
EXPO_PUBLIC_ARC_TESTNET_CHAIN_ID=1

# Arc Mainnet Chain ID (update when available)
EXPO_PUBLIC_ARC_MAINNET_CHAIN_ID=2

# ===============================================
# Supabase Configuration
# ===============================================
# Get your credentials from https://supabase.com/dashboard

# Supabase Project URL
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Supabase Anonymous Key (safe for client-side)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (server-side only - NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===============================================
# App Configuration
# ===============================================
EXPO_PUBLIC_APP_ENV=development
# Options: development, staging, production

# Enable debug logging
EXPO_PUBLIC_DEBUG_MODE=true
